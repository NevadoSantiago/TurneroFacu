@model Grupo1.AgendaDeTurnos.Models.Turno

@{
    ViewData["Title"] = "NuevoTurno";
}

<h1>Nuevo Turno</h1>

<h4>Turno</h4>
<hr />
<div class="row">
    <div class="col-md-4">



        <form asp-action="NuevoTurno">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha"  min="@DateTime.Now" class="form-control" required/>
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="IdPrestacion" class="control-label"></label>
                <select name="IdPrestacion" class="form-control" asp-items="ViewBag.IdPrestacion" required></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCentro" class="control-label"></label>
                <select asp-for="IdCentro" class="form-control" asp-items="ViewBag.IdCentro" required></select>
            </div>
            <div class="form-group">
                <label name="hora" class="control-label"></label>
                <input type="time" step='3600' name="hora" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Reservar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col col-md-5">
        <div class="alert-danger">
            @ViewBag.Error
        </div>
        @if (@ViewBag.MENSAJE != null)
        {
            <div class="alert-success">
                @ViewBag.MENSAJE
            </div>
            <label>@ViewBag.PROFESIONAL</label>
            <label>@ViewBag.HORARIO</label>
            <label>@ViewBag.Hora</label>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


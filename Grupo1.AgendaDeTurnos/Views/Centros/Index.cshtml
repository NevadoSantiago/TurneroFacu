@model IEnumerable<Grupo1.AgendaDeTurnos.Models.Centro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole(nameof(RolesEnum.ADMINISTRADOR)))
{
    <p>
        <a asp-action="Create">Agregar centro</a>
    </p>
}
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion.Altura)
                    </td>
                    @if (User.IsInRole(nameof(RolesEnum.ADMINISTRADOR)))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
